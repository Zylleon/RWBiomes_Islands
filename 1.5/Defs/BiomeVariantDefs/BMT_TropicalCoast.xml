<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<BiomeVariantDef>

		<defName>BMT_TropicalCoast</defName>

		<label>tropical coast</label>

		<biomeLabel operation="appendPar">coast</biomeLabel>
		<biomeDescription operation="appendLine">A tropical coast borders this tile.</biomeDescription>

		<worldTileConditions>
			<coast>Ocean</coast>
			<anyOf>
				<biome>TropicalRainforest</biome>
				<biome>TropicalSwamp</biome>
			</anyOf>
		</worldTileConditions>

		<layers>
			<li>

				<!-- use the operation "add" to append entries to the wildPlants of the main biome -->
				<wildPlants operation="add">

					<!-- land plants -->
					<BMT_CoconutPalm>0.3</BMT_CoconutPalm>
					<BMT_OrangeTree>0.2</BMT_OrangeTree>
					<BMT_BananaPlant>0.3</BMT_BananaPlant>
					<BMT_Fern>0.4</BMT_Fern>
					<BMT_FloweringFern>0.4</BMT_FloweringFern>

					<!-- water plants -->
					<BMT_Kelp>0.15</BMT_Kelp>
					<BMT_SeaSponge>0.02</BMT_SeaSponge>
					<BMT_SeaGrass>3.0</BMT_SeaGrass>
					<BMT_Seaweed>2.0</BMT_Seaweed>
					<BMT_GreenAlgae>3</BMT_GreenAlgae>
					<BMT_Sargassum>0.15</BMT_Sargassum>

				</wildPlants>

				<!-- use the operation "add" to append entries to the wildAnimals of the main biome -->
				<wildAnimals operation="add">

					<!-- land grazers -->
					<BMT_Seagull>0.5</BMT_Seagull>
					<BMT_Flamingo>0.7</BMT_Flamingo>
					<BMT_FiddlerCrab>0.5</BMT_FiddlerCrab>
					<BMT_HermitCrab>0.6</BMT_HermitCrab>
					<BMT_MarineIguana>0.5</BMT_MarineIguana>
					<BMT_GreenGecko>1.5</BMT_GreenGecko>
					<BMT_SeaTurtle>0.5</BMT_SeaTurtle>
					<BMT_LeatherbackTurtle>0.8</BMT_LeatherbackTurtle>
					<BMT_PhoebaniaRat>0.05</BMT_PhoebaniaRat>

					<!-- land predators -->
					<BMT_Gigantaconda>0.05</BMT_Gigantaconda>
					<BMT_Megamantis>0.1</BMT_Megamantis>
					<BMT_KomodoDragon>0.05</BMT_KomodoDragon>

					<!-- aquatic grazers -->
					<BMT_Sardine>0.5</BMT_Sardine>
					<BMT_SunfinAngelfish>0.5</BMT_SunfinAngelfish>
					<BMT_LimepeelAngelfish>1.0</BMT_LimepeelAngelfish>
					<BMT_OrangepeelAngelfish>1.0</BMT_OrangepeelAngelfish>
					<BMT_Muckfrill>0.5</BMT_Muckfrill>
					<BMT_BlueSeaSnail>0.75</BMT_BlueSeaSnail>
					<BMT_GreenEel>1.0</BMT_GreenEel>
					<BMT_Parrotfish>0.2</BMT_Parrotfish>
					<BMT_BoomWhale>0.1</BMT_BoomWhale>
					<BMT_MantaRay>0.03</BMT_MantaRay>

					<!-- aquatic predators -->
					<BMT_Tuna>0.2</BMT_Tuna>
					<BMT_RedSnapper>0.08</BMT_RedSnapper>
					<BMT_Hammerhead>0.08</BMT_Hammerhead>
					<BMT_WhiteShark>0.06</BMT_WhiteShark>

				</wildAnimals>

			</li>
		</layers>

	</BiomeVariantDef>
</Defs>
