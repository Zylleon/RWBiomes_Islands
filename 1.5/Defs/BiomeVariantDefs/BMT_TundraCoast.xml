<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<BiomeVariantDef>

		<defName>BMT_TundraCoast</defName>

		<label>tundra coast</label>

		<biomeLabel operation="appendPar">coast</biomeLabel>
		<biomeDescription operation="appendLine">A tundra coast borders this tile.</biomeDescription>

		<worldTileConditions>
			<coast>Ocean</coast>
			<anyOf>
				<biome>Tundra</biome>
			</anyOf>
		</worldTileConditions>

		<layers>
			<li>

				<!-- use the operation "add" to append entries to the wildPlants of the main biome -->
				<wildPlants operation="add">

					<!-- land plants -->
					<BMT_WindsweptTree>0.8</BMT_WindsweptTree>
					<BMT_PurpleSaxifrage>0.5</BMT_PurpleSaxifrage>

					<!-- water plants -->
					<BMT_Kelp>1.0</BMT_Kelp>
					<BMT_SeaGrass>0.5</BMT_SeaGrass>
					<BMT_Seaweed>9.0</BMT_Seaweed>
					<BMT_Murkweed>2.0</BMT_Murkweed>
					<BMT_WhiteAlgae>1.0</BMT_WhiteAlgae>

				</wildPlants>

				<!-- use the operation "add" to append entries to the wildAnimals of the main biome -->
				<wildAnimals operation="add">

					<!-- land grazers -->
					<BMT_ShetlandPony>0.5</BMT_ShetlandPony>
					<BMT_Seagull>2</BMT_Seagull>
					<BMT_OmegaDodo>1.5</BMT_OmegaDodo>
					<BMT_BlueCrab>2</BMT_BlueCrab>
					<BMT_PhoebaniaRat>0.05</BMT_PhoebaniaRat>
					<BMT_SeaOtter>0.3</BMT_SeaOtter>

					<!-- aquatic grazers -->
					<BMT_Sardine>1.5</BMT_Sardine>
					<BMT_Obsidianfin>1.5</BMT_Obsidianfin>
					<BMT_Trout>2.0</BMT_Trout>
					<BMT_Whale>0.5</BMT_Whale>

					<!-- aquatic predators -->
					<BMT_Tuna>0.45</BMT_Tuna>
					<BMT_WhiteShark>0.08</BMT_WhiteShark>

				</wildAnimals>

			</li>
		</layers>

	</BiomeVariantDef>
</Defs>
